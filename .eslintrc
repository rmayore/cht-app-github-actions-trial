{
  "extends": "@medic/eslint-config",
  "plugins": [
    "json"
  ],
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "max-len": "off",
    "no-console": "off",
    "no-debugger": "off",
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true,
        "avoidEscape": true
      }
    ]
  },
  "globals": {
    "contact": true,
    "lineage": true,
    "reports": true
  }
}
